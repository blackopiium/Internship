
<div class="item-on-page">
    <div class="item-img">
        <a href="items/@Id">
            @if (String.IsNullOrWhiteSpace(ImageSource))
            {
<img src="/item_image/unknown.jpg"> }
            else
            {
<img src="@ImageSource">            }

        </a>
    </div>
    <div class="items">
        <h3>@Name</h3>
        <span class="price">UAH @Price</span>
    </div>
</div>



<style>
    * {
        box-sizing: border-box;
    }

    .item-on-page {
        width: 45%;
        padding: 0px 0px 15px 25px;
        border: 1px solid #eee;
        background: white;
        overflow: hidden;
        transition: .3s linear;
        float: left;
        margin: 30px;
    }

        .item-on-page:hover {
            transform: scale(1.1);
        }

    .item-img {
        transition: 1s ease-in-out;
    }

        .item-img img {
            display: block;
            width: 100%;
        }

    .items{
        margin-top: 15px;
    }

        .items h3 {
            font-weight: 700;
            color: #39404B;
            margin: 0;
            text-transform: uppercase;
            font-size: 20px;
            line-height: 2;
        }

    .price {
        color: #000000;
        display: block;
        margin-bottom: 10px;
    }
</style>
@code { 
    [Parameter]
            public string Id { get; set; }
            [Parameter]
            public string ImageSource { get; set; }
            [Parameter]
            public string Name{ get; set; }
            [Parameter]
            public string Price { get; set; }
       }
